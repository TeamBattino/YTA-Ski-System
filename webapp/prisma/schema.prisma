generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model admin {
  username String  @id @db.VarChar(255)
  password String? @db.VarChar(255)
}

model racer {
  name     String? @db.VarChar(255)
  ldap     String? @db.VarChar(255)
  racer_id String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  ski_pass String? @db.VarChar(255)
  run      run[]
  location String? @db.VarChar(255)
  race     race?   @relation(fileds: [race_id], references: [id])
  race_id  String
}

model run {
  start_time DateTime? @db.Timestamp(6)
  duration   Int?
  ski_pass   String?   @db.VarChar(255)
  run_id     String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  racer      racer?    @relation(fields: [ski_pass], references: [ski_pass], onDelete: Cascade, onUpdate: Cascade)
  race     race?   @relation(fileds: [race_id], references: [id])
  race_id  String
}

model race {
  race_id String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  racer   racer[]
  run     run[]
}

